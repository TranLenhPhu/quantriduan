@using WEB_06.Models
@using PagedList.Mvc;
@model PagedList.PagedList<WEB_06.Models.KHACHHANG>
@{
    ViewBag.Title = "Khachhang";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="text-align:center;color:royalblue">QUẢN LÝ THÔNG TIN KHÁCH HÀNG</h2>

