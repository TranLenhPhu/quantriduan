@model WEB_06.Models.DONDATHANG

@{
    ViewBag.Title = "Xoadondathang";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

    <h2 style="text-align:center;color:red">XÁC NHẬN ĐƠN ĐẶT HÀNG CẦN XÓA</h2>

    <h3>Bạn quyết định xóa đơn đặt hàng này?</h3>
<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Đã thanh toán
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Dathanhtoan)
        </dd>

        <dt>
            Tình trạng giao hàng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Tinhtranggiaohang)
        </dd>

        <dt>
            Ngày đặt
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Ngaydat)
        </dd>

        <dt>
            Ngày giao
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Ngaygiao)
        </dd>

        <dt>
            Mã KH
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaKH)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("Trở Về", "Dondathang")
        </div>
    }
</div>
