<table class="table">
    <tr>
        <th style="width:100px">Đã thanh toán</th>
        <th style="width:100px">Tình trạng giao hàng</th>
        <th style="width:100px">Ngày đặt</th>
        <th style="width:100px">Ngày giao</th>
        <th style="width:100px">Mã KH</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Dathanhtoan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tinhtranggiaohang)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ngaydat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ngaygiao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaKH)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Suadondathang", new { id = item.MaDonHang }) |
                @Html.ActionLink("Chi tiết", "Chitietdondathang", new { id = item.MaDonHang }) |
                @Html.ActionLink("Xóa", "Xoadondathang", new { id = item.MaDonHang })
            </td>
        </tr>
    }

</table>

<div class="MenuTrang">
    @Html.PagedListPager(Model, page => Url.Action("Dondathang", new { page = page }))
</div>
<style>
    .MenuTrang li {
        display: inline;
    }
</style>
