
@{
    ViewBag.Title = "Dangnhap";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
    <style>
        body {
            font-family: Arial, Helvetica, sans-serif;
        }

        form {
            border: 3px solid #f1f1f1;
        }

        .container_login input[type=text], input[type=password] {
            width: 100%;
            padding: 12px 20px;
            margin: 8px 0;
            display: inline-block;
            border: 1px solid #ccc;
            box-sizing: border-box;
        }

        .container_login button {
            background-color: #4CAF50;
            color: white;
            padding: 14px 20px;
            margin: 8px 0;
            border: none;
            cursor: pointer;
            width: 100%;
        }

            .container_login button:hover {
                opacity: 0.8;
            }

        .cancelbtn {
            width: 136px
        }

        .imgcontainer {
            text-align: center;
            margin: 24px 0 12px 0;
        }

        img.avatar {
            width: 40%;
            border-radius: 50%;
        }

        .container_login {
            padding: 16px;
        }

        span.psw {
            float: right;
            padding-top: 16px;
        }

        .message {
            color: red;
            font-weight: bold
        }
    </style>

<h4 style="color:red;text-align:center">@ViewBag.Thongbao</h4>
<h2 style="text-align:center">Đăng nhập</h2>
